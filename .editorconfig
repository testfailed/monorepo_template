# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 90
trim_trailing_whitespace = true

[{*.bazel,*.bzl,BUILD,Makefile,WORKSPACE}]
indent_size = 4
indent_style = space

[*.{js,json,yml}]
indent_size = 2
indent_style = space

[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false
